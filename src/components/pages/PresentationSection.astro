---
import Typography from "../Typography.astro";
import SocialLink from "../../types/SocialLink";

const socialLinks: Array<SocialLink> = [
    {
        name: "GitHub",
        url: "https://github.com/amjsoler",
        logo: `<svg fill="none" stroke="currentColor" width="100%" height="100%" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github" viewBox="0 0 24 24"><path stroke="none" d="M0 0h24v24H0z"/><path d="M9 19c-4.3 1.4-4.3-2.5-6-3m12 5v-3.5c0-1 .1-1.4-.5-2 2.8-.3 5.5-1.4 5.5-6a4.6 4.6 0 0 0-1.3-3.2 4.2 4.2 0 0 0-.1-3.2s-1.1-.3-3.5 1.3a12.3 12.3 0 0 0-6.2 0C6.5 2.8 5.4 3.1 5.4 3.1a4.2 4.2 0 0 0-.1 3.2A4.6 4.6 0 0 0 4 9.5c0 4.6 2.7 5.7 5.5 6-.6.6-.6 1.2-.5 2V21"/></svg>`
    },
    {
        name: "BitBucket",
        url: "https://bitbucket.org/amjsoler/workspace/repositories/",
        logo: `<svg width="100%" height="100%" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-bitbucket" viewBox="0 0 24 24"><path stroke="none" d="M0 0h24v24H0z"/><path d="M3.648 4a.64.64 0 0 0-.64.744l3.14 14.528c.07.417.43.724.852.728h10a.644.644 0 0 0 .642-.539l3.35-14.71a.641.641 0 0 0-.64-.744L3.648 4z"/><path d="M14 15h-4L9 9h6z"/></svg>`
    },
    {
        name: "LinkedIn",
        url: "https://es.linkedin.com/in/jorgeamat",
        logo: `<svg width="100%" height="100%" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin" viewBox="0 0 24 24"><path stroke="none" d="M0 0h24v24H0z"/><path d="M4 6a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zM8 11v5M8 8v.01M12 16v-5"/><path d="M16 16v-3a2 2 0 0 0-4 0"/></svg>`
    },
];
---

<section class="pt-32 px-32">
    <div class="grid grid-rows-1 grid-cols-4">
        <div class="col-span-3">
            <Typography variant="p" class="font-bold text-7xl">
                HEY! Soy
            </Typography>

            <div class="relative">
                <Typography variant="p" class="text-8xl font-bold">
                    <span class="text-color3">Jorge Amat</span>
                </Typography>
                <div class="absolute -left-24 top-12 block">
                    <svg xmlns="http://www.w3.org/2000/svg" width="79" height="235" fill="none"><path stroke="#00ADB5" stroke-linecap="round" stroke-linejoin="round" stroke-opacity=".2" stroke-width="5" d="M75.8 3.198c-25.616.718-20.896-.253-41.62 19.7-4.733 4.557-11.89 10.1-13.512 18.196-2.393 11.948 12.258 48.095 21.85 34.791 6.198-8.597 5.004-23.365-4.426-27.27C22.628 42.21 10.194 61.147 5.387 77.51c-5.293 18.016-.848 37.724 11.626 49.753 5.699 5.495 14.89 3.007 9.849-8.664-10.37-24.003-22.365 5.115-20.741 21.062 2.925 28.724 27.596 66.458 50.678 60.474 7.217-1.871 4.858-6.045 1.83-9.133-3.074-3.133-10.801-14.575-8.726-10.23 3.626 7.595 8.228 10.651 13.368 15.111 6.63 5.752-7.591 18.322-11.71 22.809-2.163 2.355-5.306 7.63-5.89 11.472-1.155 7.584 7.183-12.233 8.675-19.682"/></svg>
                </div>
            </div>

            <Typography variant="p" class="text-7xl font-bold">
                Desarrollador <span class="text-color3">WEB</span>
            </Typography>

            <section class="flex flex-row flex-wrap mt-12 gap-6">
                {socialLinks.map((socialLink) => (
                        <a href={socialLink.url} target="_blank" class="flex justify-center items-center w-20 h-12 rounded-3xl bg-color2 hover:bg-color3 transition duration-200">
                            <span class="w-full h-full px-2 py-1" set:html={socialLink.logo}></span>
                        </a>
                ))}
            </section>
        </div>
        <div class="relative flex justify-center items-center">
            <img class="block object-contain" src="/src/assets/images/fotoPerfil.webp" alt="Imagen de fondo de la imagen de perfil"/>
        </div>
    </div>
</section>